server {
    listen   8080;
    root /var/www/esi-showroom/legacy/web;
    server_name legacy.esi-showroom.local;
    index index.php;

    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php-fpm-www.sock;
        fastcgi_index index.php;
        include /etc/nginx/fastcgi_params;
    }
}